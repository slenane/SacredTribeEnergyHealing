<div class="wrapper contact_wrapper">

    <div class="contact_header">
        <h1>Contact</h1>
    </div>

    <div class="social_div">
        <h2>Find us on social media</h2>

        <div class="social_media_grid">
            <div class="social_media--link facebook"><a href="#"><i class="fab fa-facebook"></i></a></div>
            <div class="social_media--link instagram"><a href="#"><i class="fab fa-instagram"></i></a></div>
            <div class="social_media--link twitter"><a href="#"><i class="fab fa-twitter"></i></a></div>
        </div>
    </div>

    <div class="contact_form_div shadow">

        <div class="contact_form_grid">

            <div class="contact_form_grid--section-1 shadow">

                <div class="contact_form_grid--header">
                    <h3>Sacred Tribe Energy Healing</h3>
                </div>
                <div class="contact_form_grid--item contact_form_grid--address">
                    <img src="../../images/icons/location.png" alt="Location icon">
                    <p>Jennifer Wilson,<br>Shannon, Co. Clare,<br>Ireland</p>
                </div>
                <div class="contact_form_grid--item contact_form_grid--email">
                    <img src="../../images/icons/email.png" alt="Email icon">
                    <p>jenny@sacredtribe-energyhealing.com</p>
                </div>
                <div class="contact_form_grid--item contact_form_grid--phone">
                    <img src="../../images/icons/phone.png" alt="Phone icon">
                    <p>(+353) 87 9361 919</p>
                </div>

            </div>


            <div class="contact_form_grid--section-2">

                <form class="contact_form" action="">
                    <div class="form-group">
                      <label for="name">Name: </label>
                      <input type="text" class="form-control" id="name" placeholder="Contact name">
                    </div>
                    <div class="form-group">
                      <label for="email">Email: </label>
                      <input type="email" class="form-control" id="email" placeholder="Contact email">
                    </div>
                    <div class="form-group">
                        <label for="message">Message: </label>
                        <textarea name="message" id="message" class="form-control" cols="100" rows="5">Please write your message here...</textarea>
                      </div>
                    <button type="submit" class="contact_button">Submit</button>
                  </form>

            </div>


        </div>
    </div>

</div>