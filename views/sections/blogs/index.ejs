<% layout('layouts/boilerplate')%>

<nav class="navbar navbar-fixed-top navbar-expand-lg navbar-dark bg-transparent pt-0 mt-0">
    <div class="container container-fluid">
        <a class="navbar-brand black-brand" href="/">Sacred Tribe Energy Healing</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse navbar_black_text" id="navbarNavAltMarkup">
            <div class="navbar-nav ml-auto">
                <a class="nav-link" href="/">Home</a>
                <a class="nav-link" href="/jewellery">Jewellery</a>
                <a class="nav-link" href="/treatments">Treatments</a>
                <a class="nav-link" href="/awareness">Awareness</a>
                <a class="nav-link" href="/blogs">Blogs</a>
                <a class="nav-link" href="/about">About</a>
                <a class="nav-link" href="/contact">Contact</a>
                <div class="navbar-nav ml-auto">
                    <% if(currentUser) {%>
                    <a class="nav-link" href="/logout">Logout</a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</nav>

<div class="blog_index--header">
    <h1>Blogs</h1>
</div>

<% if (currentUser) { %>
<div class="blog_index_add">
    <a href="/blogs/new">
        <button>Add a blog</button>
    </a>
</div>
<% } %>

<div class="blog_index_wrapper">

    <div class="blog_index_grid">

        <% for (let blog of blogs){ %>
        <div class="blog_index_grid--item shadow">
            <div class="card border-light">
                <img class="img-fluid blog_item--image" alt="Blog image" src="<%=blog.image%>">
                    <div class="card-body">
                        <h5 class="card-title blog_item--title"><%= blog.title %></h5>
                        <p class="card-text blog_item--text"><%= blog.header %></p>
                        <a class="blog_item--button" href="/blogs/<%=blog._id%>">
                            <button>Read more</button>
                        </a>
                    </div>
            </div>
        </div>
        <% } %>
                
    </div>

</div> <!-- END OF WRAPPER -->
