<h1>All Blogs</h1>
<div>
    <a href="/blogs/new">Add Blogs</a>
</div>
<% for (let blog of blogs){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=blog.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= blog.title %> </h5>
                <a class="btn btn-primary" href="/blogs/<%=blog._id%>">Read</a>
            </div>
        </div>
    </div>
</div>
<% }%>