<% layout('layouts/boilerplate')%>

    <% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Blog</h1>
        <div class="col-6 offset-3">
            <form action="/blogs" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="blog[title]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="blog[image]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
    
                <div class="mb-3">
                    <label class="form-label" for="text">Text</label>
                    <textarea class="form-control" type="text" id="text" name="blog[text]"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Blog</button>
                </div>
            </form>
            <a href="/blogs">All Blogs</a>
        </div>
    </div>