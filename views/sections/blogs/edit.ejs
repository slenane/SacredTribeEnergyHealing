<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Blog</h1>
    <div class="col-6 offset-3">
        <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="blog[title]"
                    value="<%=blog.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="blog[image]"
                    value="<%=blog.image %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="text">Text</label>
                <textarea class="form-control" type="text" id="text" name="blog[text]"
                    required><%= blog.text%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Blog</button>
            </div>
        </form>
        <a href="/blogs/<%= blog._id%>">Back To Blog</a>

    </div>
</div>